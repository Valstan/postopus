# Основные настройки базы данных
MONGO_CLIENT=mongodb://localhost:27017/
DATABASE_NAME=postopus

# PostgreSQL для веб-интерфейса (опционально)
# DATABASE_URL=postgresql://user:password@localhost:5432/postopus
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postopus
POSTGRES_USER=postopus_user
POSTGRES_PASSWORD=your_postgres_password

# VK API токены
VK_APP_ID=your_vk_app_id
VK_CLIENT_SECRET=your_vk_client_secret
VK_TOKENS=token1,token2,token3
VK_READ_TOKENS=read_token1,read_token2
VK_POST_TOKENS=post_token1,post_token2
VK_REPOST_TOKENS=repost_token1,repost_token2

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Безопасность
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки приложения
TEXT_POST_MAXSIZE_SIMBOLS=4000
TABLE_SIZE=30
LOG_LEVEL=INFO

# Развертывание
ENVIRONMENT=development
DEBUG=True

# Redis для очередей задач (опционально)
REDIS_URL=redis://localhost:6379/0

# Celery настройки
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0